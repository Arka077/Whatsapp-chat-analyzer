# Gemini API Configuration
# You can provide multiple API keys separated by commas for automatic fallback
# Single key:  GEMINI_API_KEY=your_api_key_here
# Multiple keys: GEMINI_API_KEY=key1,key2,key3
HF_TOKEN=your_hf_token_here
GEMINI_API_KEY=your_api_key_here

# Alternative: Use GEMINI_API_KEYS for multiple keys (comma-separated)
# GEMINI_API_KEYS=key1,key2,key3

# HuggingFace Token Configuration
# You can provide multiple tokens separated by commas for automatic fallback
# Single token:  HF_TOKEN=your_token_here
# Multiple tokens: HF_TOKEN=token1,token2,token3
# Alternative: HF_TOKENS=token1,token2,token3

# LLM Model Configuration
LLM_MODEL=gemini-2.0-flash
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# Embedding Configuration
EMBEDDING_MODEL=thenlper/gte-small
EMBEDDING_DIMENSION=384

# Vector Database
VECTOR_DB_TYPE=faiss
FAISS_INDEX_PATH=./data/faiss_index

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app. log

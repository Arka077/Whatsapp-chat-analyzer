# Mistral API Configuration
# You can provide multiple API keys separated by commas for automatic fallback
# Single key: MISTRAL_API_KEY=your_api_key_here
# Multiple keys: MISTRAL_API_KEY=key1,key2,key3
MISTRAL_API_KEY=your_api_key_here

# Alternative: Use MISTRAL_API_KEYS for multiple keys (comma-separated)
MISTRAL_API_KEYS=key1,key2,key3

# LLM Model Configuration
# Options: mistral-tiny, mistral-small-latest, mistral-medium-latest, mistral-large-latest
LLM_MODEL=mistral-small-latest
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# Embedding Configuration (Local - no API key needed)
EMBEDDING_MODEL=thenlper/gte-small
EMBEDDING_DIMENSION=384

# Vector Database
VECTOR_DB_TYPE=faiss
FAISS_INDEX_PATH=./data/faiss_index

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app. log
